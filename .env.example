# AWS Credentials (set these in your local environment)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here
AWS_REGION=us-east-2

# Bedrock Model (using Haiku - cheaper & faster)
# Cost: $0.001 per 1K input tokens (vs $0.003 for Sonnet)
# Other options:
#   - meta.llama3-1-8b-instruct-v1:0 (even cheaper)
#   - mistral.mistral-7b-instruct-v0:2 (cheapest)
BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0

# SuperOps (mock for now)
SUPEROPS_API_URL=https://api.superops.ai
SUPEROPS_API_KEY=mock_key_for_demo

# DynamoDB
DYNAMODB_TABLE_PATCH_RUNS=PatchRuns
DYNAMODB_TABLE_PLANS=PatchPlans

